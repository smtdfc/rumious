{
  "name": "@rumious/cli",
  "version": "0.0.2",
  "description": "A CLI for Rumious Framework.",
  "license": "MIT",
  "author": "smtdfc <me.smtdfc@gmail.com>",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "rumious": "dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "data/",
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:prod": "NODE_ENV=production rollup -c",
    "build:dev": "NODE_ENV=development rollup -c",
    "clean": "rm -rf dist",
    "test": "node ../../test/cli",
    "prepublishOnly": "cp ../../LICENSE . && npm run clean && npm run build:prod"
  },
  "keywords": [
    "compiler",
    "jsx",
    "loader",
    "framework",
    "rumious",
    "cli",
    "template",
    "transform"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smtdfc/rumious.git"
  },
  "bugs": {
    "url": "https://github.com/smtdfc/rumious/issues"
  },
  "homepage": "https://github.com/smtdfc/rumious/tree/main/packages/cli#readme",
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "dependencies": {
    "cac": "^6.7.14"
  }
}
