{
  "name": "@rumious/config",
  "version": "0.0.1",
  "description": "Provides the shared config types and defineConfig helper for Rumious CLI, loader, and other tooling.",
  "license": "MIT",
  "author": "smtdfc <me.smtdfc@gmail.com>",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "build:dev": "cross-env  NODE_ENV=development rollup -c",
    "clean": "shx rm -rf dist",
    "prepublishOnly": "shx cp  ../../LICENSE . && npm run clean && npm run build:prod"
  },
  "keywords": [
    "compiler",
    "config",
    "loader",
    "framework",
    "rumious",
    "template",
    "transform"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smtdfc/rumious.git"
  },
  "bugs": {
    "url": "https://github.com/smtdfc/rumious/issues"
  },
  "homepage": "https://github.com/smtdfc/rumious/tree/main/packages/config#readme",
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "dependencies": {},
  "peerDependencies": {
    "@rumious/core": "workspace:*"
  },
  "devDependencies": {}
}
