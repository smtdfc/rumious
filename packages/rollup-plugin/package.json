{
  "name": "@rumious/rollup-plugin",
  "version": "0.0.2",
  "description": "A Rollup plugin for transforming JSX into optimized JavaScript code during the build process.",
  "license": "MIT",
  "author": "smtdfc <me.smtdfc@gmail.com>",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "build:dev": "cross-env  NODE_ENV=development rollup -c",
    "clean": "shx rm -rf dist",
    "prepublishOnly": "shx cp  ../../LICENSE . && npm run clean && npm run build:prod"
  },
  "keywords": [
    "compiler",
    "jsx",
    "loader",
    "framework",
    "rumious",
    "rollup",
    "template",
    "transform"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smtdfc/rumious"
  },
  "bugs": {
    "url": "https://github.com/smtdfc/rumious/issues"
  },
  "homepage": "https://github.com/smtdfc/rumious/tree/main/packages/rollup-plugin#readme",
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "dependencies": {
    "@rumious/compiler": "workspace:*",
    "@rumious/config": "workspace:*"
  },
  "peerDependencies": {
    "@rumious/core": "workspace:*",
    "rollup": "4.x"
  }
}
