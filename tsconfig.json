{
  "compilerOptions": {
    "jsx": "react", 
    "jsxFactory": "window.RUMIOUS_JSX.createElement",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["src", "**/jsx.d.ts"],
  "exclude": ["node_modules", "dist"]
}